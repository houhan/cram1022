    <CheckBox
        android:text="記住密碼"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox8"
        android:layout_marginBottom="113dp"
        android:layout_above="@+id/create"
        android:layout_alignStart="@+id/textView2" />

    <CheckBox
        android:text="自動登入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox9"

        android:layout_alignBaseline="@+id/checkBox8"
        android:layout_alignBottom="@+id/checkBox8"
        android:layout_alignEnd="@+id/editPWD"
        android:layout_marginEnd="14dp" />

    <Button
        style="oval"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/create"
        android:alpha="100"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/checkBox8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:id="@+id/editPWD"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginRight="37dp"

        android:layout_marginBottom="52dp"
        android:layout_above="@+id/checkBox8"
        android:layout_alignStart="@+id/editID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密碼："
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_marginStart="43dp"
        android:layout_alignBottom="@+id/editPWD"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號："
        android:id="@+id/textView"
        android:textSize="25dp"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/editPWD"
        android:layout_toStartOf="@+id/editPWD"
        android:layout_marginEnd="19dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editID"
        android:layout_marginRight="37dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/checkBox8" />

    <Button
        android:layout_height="70dp"
        android:id="@+id/button"
        android:alpha="100"
        style="oval"
        android:background="@drawable/login"
        android:clickable="false"
        android:layout_width="150dp"

        android:layout_marginBottom="12dp"
        android:layout_above="@+id/create"
        android:layout_alignEnd="@+id/create" />


</RelativeLayout>
