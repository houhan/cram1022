<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.cram1001.Home_teacherActivity">
    <ScrollView android:id="@+id/contencrollView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/billboardteacher"
                android:background="@drawable/billboard"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_height="110dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/attendanceteacher"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/absence"
                android:layout_height="110dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/qkteacher"
                android:layout_alignTop="@+id/attendance"
                android:layout_alignParentEnd="true"
                android:background="@drawable/qk"
                android:layout_height="110dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/Catchteacher"
                android:background="@drawable/gohome"
                android:layout_below="@+id/attendance"
                android:layout_alignParentStart="true"
                android:layout_height="110dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/scheduleteacher"
                android:layout_alignTop="@+id/Catch"
                android:layout_alignParentEnd="true"
                android:background="@drawable/schedule"
                android:layout_height="110dp" />

            <Button
                android:text="123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/call" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
